@model CTFWebApp.Models.SubmitProblemViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Problem Details</h2>

<div>
    <h4>Solve Problem!</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProblemName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProblemName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProblemDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProblemDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Points)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Points)
        </dd>
    </dl>
    <form asp-action="Details">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="SubmittedAnswer" class="control-label"></label>
            <input asp-for="SubmittedAnswer" class="form-control" />
            <span asp-validation-for="SubmittedAnswer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
